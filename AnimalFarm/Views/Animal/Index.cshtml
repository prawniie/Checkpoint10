@model IEnumerable<AnimalFarm.Models.Animal>
@inject AnimalFarm.Models.SiteConfig SiteConfig

<!DOCTYPE html>
<html>
<head>
    <title>Animal Farm</title>
    <link href="/css/main.css" rel="stylesheet" />
    <link rel='shortcut icon' type='image/x-icon' href='/favicon.ico' />
</head>
<body>

    <div id="app">

        <form method="post">
            <span class="buttons">
                <button asp-action="add" asp-route-name="panda">🐼</button>
                <button asp-action="add" asp-route-name="pig">🐷</button>
                <button asp-action="add" asp-route-name="rabbit">🐰</button>
                <button method="delete" asp-action="delete" style="background-color:red">✗</button>
            </span>
        </form>

        <div class="animal">
            @foreach(var animal in Model)
            {
                switch (animal.Name)
                {
                    case "panda":<span>🐼</span> break;
                    case "pig":<span>🐷</span> break;
                    case "rabbit":<span>🐰</span> break;
                }
            }
        </div>

    </div>

</body>
</html>